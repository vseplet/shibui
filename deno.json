{
  "name": "@vseplet/shibui",
  "lock": false,
  "version": "1.4.0",
  "exports": "./source/mod.ts",
  "publish": {
    "exclude": [
      "drafts"
    ],
    "include": [
      "LICENSE",
      "README.md",
      "docs/**/*.md",
      "source/**/*.ts",
      "examples/**/*.ts"
    ]
  },
  "tasks": {
    "test": "deno test --allow-all --unstable-broadcast-channel --unstable-kv ./tests/",
    "test:coverage": "deno test --allow-all --unstable-broadcast-channel --unstable-kv --coverage=coverage ./tests/",
    "pub-dry": "deno publish --dry-run --allow-slow-types",
    "example:simple-task": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./examples/01-simple-task-with-trigger.ts",
    "example:task-chaining": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./examples/02-task-chaining.ts",
    "example:simple-workflow": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./examples/03-simple-workflow.ts",
    "example:workflow-sequence": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./examples/04-workflow-with-sequence.ts",
    "example:shared-task": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./examples/05-workflow-with-shared-task.ts",
    "example:dependent-task": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./examples/06-dependent-task-multiple-pots.ts",
    "example:timeout-retry": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./examples/07-timeout-and-retry.ts",
    "example:custom-context": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./examples/08-custom-context-injection.ts",
    "example:aggregator": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./examples/10-multi-api-aggregator.ts"
  },
  "imports": {
    "$versions": "./source/versions.ts",
    "$shibui": "./source/mod.ts",
    "$shibui/types": "./source/types.ts",
    "$shibui/events": "./source/events.ts",
    "$shibui/emitters": "./source/emitters.ts",
    "$shibui/core": "./source/core/mod.ts",
    "$shibui/providers": "./source/providers/mod.ts",
    "$shibui/api": "./source/api.ts",
    "$helpers/types": "./source/types.ts",
    "$helpers": "./source/helpers.ts",
    "@std/path": "jsr:@std/path@0.224.0",
    "@std/async": "jsr:@std/async@0.224.0",
    "@std/fmt": "jsr:@std/fmt@0.224.0",
    "@std/flags": "jsr:@std/flags@0.224.0",
    "@vseplet/luminous": "jsr:@vseplet/luminous@1.0.3"
  },
  "fmt": {
    "exclude": [
      "deno.json",
      "source/versions.ts"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-slow-types",
        "ban-types",
        "no-explicit-any"
      ]
    },
    "exclude": [
      "tests/",
      "examples/",
      "deno.json",
      "source/versions.ts"
    ]
  }
}